<%- include('./partials/header')%>

<div class="container" style="margin-top: 30px">
    <div class="card">
        <h5 class="card-header">ADD YOUR DATA</h3>
            <form action="" method="post" style="margin-top: 20px;">
                <div class="card-body">

                    <!--From Group Row String-->
                    <div class="form-group row">
                        <label for="string" name="string" class="col-sm-1 col-form-label">String</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="string" name="string" placeholder="String">
                        </div>
                    </div>

                    <!--From Group Row Number-->
                    <div class="form-group row">
                        <label for="integer" class="col-sm-1 col-form-label">Number</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="integer" name="integer" placeholder="Integer">
                        </div>
                    </div>

                    <!--From Group Row Float-->
                    <div class="form-group row">
                        <label for="float" class="col-sm-1 col-form-label">Float</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" step="0.01" id="float" name="float"
                                placeholder="Float">
                        </div>
                    </div>

                    <!--From Group Row Date-->
                    <div class="form-group row">
                        <label for="date" class="col-sm-1 col-form-label">Date</label>
                        <div class="col-sm-10">
                            <input type="date" class="form-control" id="date" name="date" placeholder="Date">
                        </div>
                    </div>

                    <!--From Group Row Boolean-->
                    <div class="form-group row">
                        <label for="boolean" class="col-sm-1 col-form-label">Boolean</label>
                        <div class="col-sm-10">
                            <select id="boolean" name="boolean" class="form-control">
                                <option selected disabled> Choose the boolean</option>
                                <option class="form-control" value="true">True</option>
                                <option class="form-control" value="false">False</option>
                            </select>
                        </div>
                    </div>

                    <!--Button Save-->
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="/">Back</a>
                </div>
            </form>
            
            <%- include('./partials/footer')%>